{% extends 'base.html.twig' %}

{% block title %}Review{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/review.css') }}">
{% endblock %}


{% block body %}
    <h1 class="titreImg">Avis des consommateurs</h1>
    <a href="{{ path('app_review_new') }}" class="btnAction">DÃ©poser un avis</a>
    <div class="tableGrid">
    {% for review in reviews %}
        {% if review.isApprouved == "1" %}
        <div class="tableShow">
                <p>Note : </p>
                <div id="etoileContainer">
                    {% for i in 1..review.count %}
                    <span class="etoile" data-value="{{ i }}">&#9733;</span>
                    {% endfor %}
                </div>
                <p> Nom : </p>
                <p>{{ review.name }}</p>
                <p>Date de publication : </p>
                <p>{{ review.date ? review.date|date('Y-m-d') : '' }}</p>
                <p>Avis :</p>
                <p>{{ review.content }}</p>
        </div>
        {% endif %}
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </div>
{% endblock %}
