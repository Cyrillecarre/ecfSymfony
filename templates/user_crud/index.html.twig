{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/admin_crud.css') }}">
{% endblock %}

{% block body %}
    <h1 class="titre">Liste des Employés</h1>

    <table class="table">
        <thead>
            <tr class="tableIndex">
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr class="tableDescription">
                <td>{{ user.email }}</td>
                <td class="tableAction">
                    <a href="{{ path('app_user_crud_show', {'id': user.id}) }}" class="btnActionVoir">Voir</a>
                    <a href="{{ path('app_user_crud_edit', {'id': user.id}) }}" class="btnActionModifier">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td>no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_crud_new') }}" class="btnAjouter">Ajouter un Employé</a>
    <a href="{{ path('app_admin') }}" class="btnAction">Retour</a>
{% endblock %}
