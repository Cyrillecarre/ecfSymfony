{% block body %}
<div class="form">
    {{ form_start(form) }}
    <div class="formContent">
        {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'label'}}) }}
        {{ form_widget(form.name, {'label_attr': {'class': 'input'}}) }}
        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'label'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'input'}}) }}
    </div>
    <button class="btnAction">{{ button_label|default('Enregistrer') }}</button>
    {{ form_end(form) }}
</div>
{% endblock %}
