{% extends 'base.html.twig' %}

{% block title %}Schedule{% endblock %}

{% block body %}
    <h1>Schedule</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Day</th>
                <td>{{ schedule.day }}</td>
            </tr>
            <tr>
                <th>Hours_o_matin</th>
                <td>{{ schedule.hoursOMatin ? schedule.hoursOMatin|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Hours_f_matin</th>
                <td>{{ schedule.hoursFMatin ? schedule.hoursFMatin|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Hours_o_a</th>
                <td>{{ schedule.hoursOA ? schedule.hoursOA|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Hours_f_a</th>
                <td>{{ schedule.hoursFA ? schedule.hoursFA|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_schedule_crud_index') }}">Retour</a>

    <a href="{{ path('app_schedule_crud_edit', {'id': schedule.id}) }}">Modifier</a>

{% endblock %}
